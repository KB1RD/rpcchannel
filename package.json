{
  "name": "rpcchannel",
  "version": "0.1.4",
  "description": "Easy RPC with permission controls",
  "main": "dist/rpcchannel.min.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "rpc",
    "messagechannel",
    "worker"
  ],
  "scripts": {
    "build": "webpack --env dev && webpack --env build && yarn run build:dts",
    "build:dts": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --declarationDir dist/",
    "build:docs": "typedoc --mode modules --out .jsdoc src/",
    "dev": "webpack --progress --colors --watch --env dev",
    "check-types": "tsc --noEmit",
    "test": "mocha --require ./test/babel-register.js --colors ./test/*.spec.ts",
    "test:watch": "mocha --require ./test/babel-register.js --colors -w ./test/*.spec.ts",
    "test:cover": "cross-env NODE_ENV=test nyc mocha --timeout 10000 --require ./test/babel-register.js --require source-map-support/register --recursive --colors ./test/*.spec.ts",
    "test:lint": "eslint ./test/*.spec.ts",
    "_version": "echo VERSION: $npm_package_version",
    "upgrade-major": "./upgrade.sh"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.24",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "ts-loader": "^8.0.1",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "yargs": "^15.4.1",
    "yarn-upgrade-all": "^0.5.4"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "ajv": "^6.12.3"
  }
}
